{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "libs/**/*",
    "components.d.ts",
    "auto-imports.d.ts"
  ],
  "exclude": ["src/**/__tests__/*", "**/*.stories.*"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "element-plus/global",
      "vite-plugin-terminal/client",
      "naive-ui/volar",
      "vitest/globals"
    ]
  }
}
